@{
    ViewData["Title"] = "Index";
}

<h1>Dispensar Papeletas</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post" asp-controller="Cajero" asp-action="DispensarPapeletas" class="form-control">
    <label for="cantidad">Cantidad a dispensar:</label>
    <input type="number" id="cantidad" name="cantidad" min="0" class="form-control" />
    <br />
    <label for="tipoCajero" class="form-label">Tipo de cajero:</label>
    <select id="tipoCajero" name="tipoCajero" class="form-select">
        <option value="eficiente">Cajero eficiente</option>
        <option value="1000y200">Cajero 1000 y 200</option>
        <option value="100y500">Cajero 100 y 500</option>
       
    </select>
    <br />
    <button type="submit" class="btn btn-success">Enviar</button>
</form>
